<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <%= link_to 'Read more', post, class: "btn btn-primary" %>
  <%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  <hr>
<% end %>

<%= link_to 'New Post', new_post_path, class: "btn btn-success btn-lg" %>
